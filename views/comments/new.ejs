<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new comment to <%= restaurant.name %></h1>
        <div style="width:30%; margin:25px auto;">
            <form action="/restaurants/<%= restaurant._id %>/comments" method = "POST">
                <div class="form-group">
                    <input class="form-control" type = "text"  name="comment[text]"  placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "number" name= "comment[rating]" min="1" max="5" placeholder="Rating">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>