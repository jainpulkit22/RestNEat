<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= restaurant.name%></h1>
        <div style="width:30%; margin:25px auto;">
            <form action="/restaurants/<%= restaurant._id%>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class="form-control" type = "text"  name="restaurant[search]"  value = <%=restaurant.name%>>
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name= "restaurant[link]" value = <%=restaurant.img%>>
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name= "restaurant[desc]" value = <%=restaurant.description%>>
                </div>
                <div class="form-group">
                    <input class="form-control" type = "number" step="1" min="0" name= "restaurant[price]" value = <%=restaurant.price%>>
                </div>
                <div class="form-group">
                    <input class="form-control" type = "number" name= "restaurant[contact]" value = <%=restaurant.contact%>>
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name= "restaurant[map_location]" value = <%=restaurant.map_location%>>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>